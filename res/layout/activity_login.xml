<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/bg"
                android:orientation="vertical"
                tools:context="com.zte.monitor.app.activity.LoginActivity">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/logo"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="40dp"
               android:id="@+id/logo"
            />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="GSM监控"
              android:textSize="30sp"
              android:textColor="#ffffff"
              android:layout_marginTop="20dp"
              android:id="@+id/label"
              android:textStyle="bold"
              android:layout_below="@id/logo"/>

    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:hint="@string/title_user_name"
              android:layout_marginTop="30dp"
              android:id="@+id/user_name"
              android:layout_below="@id/label"
              android:background="@drawable/login_item_top"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:text="admin"
              android:alpha="0.5"
              android:singleLine="true"/>

    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:hint="@string/title_user_password"
              android:singleLine="true"
              android:layout_below="@id/user_name"
              android:id="@+id/user_password"
              android:background="@drawable/login_item_bottom"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:alpha="0.5"
              android:text="123456"
              android:password="true"/>

    <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:id="@+id/button_login"
            android:text="@string/title_button_login"
            android:layout_below="@id/user_password"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_button_bg"/>
</RelativeLayout>
