<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/content_bg"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                tools:context="com.zte.monitor.app.activity.AddUserActivity">

    <Button android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:text="保存"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:id="@+id/save"
            android:background="@drawable/button_bg"
            android:layout_marginBottom="10dp"/>

    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:scrollbars="none"
                android:layout_above="@id/save"
                android:overScrollMode="never" android:fadingEdge="none">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="20dp">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textColor="#ffffff" android:layout_marginLeft="10dp"
                      android:text="姓名"
                      android:layout_marginBottom="4dp"/>

            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/edt_username"
                      android:paddingTop="16dp"
                      android:paddingBottom="16dp"
                      android:paddingLeft="20dp"
                      android:textColor="#ffffff"
                      android:background="@drawable/list_item_bg"/>

            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textColor="#ffffff" android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="4dp"
                      android:text="IMSI"/>

            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:maxLength="15" android:singleLine="true"
                      android:digits="0123456789"
                      android:inputType="number"
                      android:id="@+id/edt_imsi"
                      android:paddingTop="16dp"
                      android:textColor="#ffffff"
                      android:paddingBottom="16dp"
                      android:paddingLeft="20dp"
                      android:background="@drawable/list_item_bg"/>

            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textColor="#ffffff" android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
                      android:text="IMEI"
                      android:layout_marginBottom="4dp"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:singleLine="true" android:maxLength="15"
                      android:digits="0123456789"
                      android:inputType="number"
                      android:textColor="#ffffff"
                      android:paddingTop="16dp"
                      android:paddingBottom="16dp"
                      android:paddingLeft="20dp"
                      android:background="@drawable/list_item_bg"
                      android:id="@+id/edt_imei"/>

            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textColor="#ffffff" android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
                      android:text="手机号码"
                      android:layout_marginBottom="4dp"/>
            <EditText android:layout_width="fill_parent" android:layout_height="fill_parent"
                      android:singleLine="true" android:maxLength="11"
                      android:digits="0123456789"
                      android:inputType="phone"
                      android:paddingTop="16dp"
                      android:textColor="#ffffff"
                      android:paddingBottom="16dp"
                      android:paddingLeft="20dp"
                      android:background="@drawable/list_item_bg"
                      android:id="@+id/edt_phone_number"/>

            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textColor="#ffffff" android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
                      android:text="用户属性"
                      android:layout_marginBottom="4dp"/>
            <Spinner android:layout_width="fill_parent" android:layout_height="wrap_content"
                     android:id="@+id/sp_user_type"
                     android:paddingLeft="10dp"
                     android:paddingTop="16dp"
                     android:paddingBottom="16dp"
                     android:background="@drawable/spinner_bg_drawable"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
